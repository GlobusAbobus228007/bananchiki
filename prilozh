login-------------------------------------------
package com.example.prilozh

import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.TextView
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity

class LoginActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_login)

        val tvTitle = findViewById<TextView>(R.id.tvTitle)
        val btnLogin = findViewById<Button>(R.id.btnLogin)
        val etLogin = findViewById<EditText>(R.id.etLogin)
        val etPassword = findViewById<EditText>(R.id.etPassword)

        val userType = intent.getStringExtra("USER_TYPE")


        tvTitle.text = "Вход для $userType"


        btnLogin.setOnClickListener {

            val login = etLogin.text.toString()
            val password = etPassword.text.toString()

            if (login.isNotEmpty() && password.isNotEmpty()) {
                Toast.makeText(this, "Входим...", Toast.LENGTH_SHORT).show()
            } else {
                Toast.makeText(this, "Заполните поля!", Toast.LENGTH_SHORT).show()
            }
        }
    }
}

main -----------------------------------------
package com.example.prilozh

import android.content.Intent
import android.os.Bundle
import android.widget.Button
import androidx.appcompat.app.AppCompatActivity

class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        val btnTeacher = findViewById<Button>(R.id.btnTeacher)
        val btnStudent = findViewById<Button>(R.id.btnStudent)

        btnTeacher.setOnClickListener {
            val intent = Intent(this, LoginActivity::class.java)
            intent.putExtra("USER_TYPE", "преподавателя")
            startActivity(intent)
        }

        btnStudent.setOnClickListener {
            val intent = Intent(this, LoginActivity::class.java)
            intent.putExtra("USER_TYPE", "студента")
            startActivity(intent)
        }
    }
}
